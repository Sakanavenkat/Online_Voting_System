<% const title = 'Home' %>

<div class="hero-section">
    <h1 class="display-4 fw-bold text-primary mb-3">
        <i class="fas fa-vote-yea me-3"></i>
        Welcome to VoteHub
    </h1>
    <p class="lead text-muted mb-4">
        Create polls, gather opinions, and make decisions together with our secure voting platform
    </p>
    <% if (!user) { %>
    <div class="d-flex gap-3 justify-content-center">
        <a href="/register" class="btn btn-primary btn-lg">
            <i class="fas fa-user-plus me-2"></i>Get Started
        </a>
        <a href="/login" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-sign-in-alt me-2"></i>Sign In
        </a>
    </div>
    <% } else { %>
    <a href="/polls/create" class="btn btn-success btn-lg">
        <i class="fas fa-plus me-2"></i>Create Your First Poll
    </a>
    <% } %>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="stats-card">
            <i class="fas fa-poll fa-2x mb-2"></i>
            <h3>Easy Creation</h3>
            <p class="mb-0">Create polls in seconds with our intuitive interface</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stats-card">
            <i class="fas fa-shield-alt fa-2x mb-2"></i>
            <h3>Secure Voting</h3>
            <p class="mb-0">One vote per user with secure authentication</p>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stats-card">
            <i class="fas fa-chart-bar fa-2x mb-2"></i>
            <h3>Real-time Results</h3>
            <p class="mb-0">See results update instantly as votes come in</p>
        </div>
    </div>
</div>

<h2 class="mb-4">
    <i class="fas fa-fire me-2 text-danger"></i>
    Recent Polls
</h2>

<% if (polls && polls.length > 0) { %>
    <div class="row">
        <% polls.forEach(poll => { %>
        <div class="col-md-6 mb-4">
            <div class="card poll-card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-poll-h me-2 text-primary"></i>
                        <%= poll.title %>
                    </h5>
                    <p class="card-text text-muted">
                        <%= poll.description ? poll.description.substring(0, 100) + (poll.description.length > 100 ? '...' : '') : 'No description' %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                            <i class="fas fa-user me-1"></i>
                            by <%= poll.creator_name %>
                        </small>
                        <span class="badge bg-primary">
                            <i class="fas fa-vote-yea me-1"></i>
                            <%= poll.total_votes %> votes
                        </span>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a href="/polls/<%= poll.id %>" class="btn btn-primary w-100">
                        <i class="fas fa-eye me-2"></i>View & Vote
                    </a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    
    <div class="text-center mt-4">
        <a href="/polls" class="btn btn-outline-primary btn-lg">
            <i class="fas fa-list me-2"></i>View All Polls
        </a>
    </div>
<% } else { %>
    <div class="text-center py-5">
        <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
        <h4 class="text-muted">No polls yet</h4>
        <p class="text-muted">Be the first to create a poll!</p>
        <% if (user) { %>
        <a href="/polls/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create Poll
        </a>
        <% } else { %>
        <a href="/register" class="btn btn-primary">
            <i class="fas fa-user-plus me-2"></i>Sign Up to Create Polls
        </a>
        <% } %>
    </div>
<% } %>