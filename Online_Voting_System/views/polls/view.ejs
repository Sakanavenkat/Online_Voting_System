<% const title = poll.title %>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">
                    <i class="fas fa-poll-h me-2 text-primary"></i>
                    <%= poll.title %>
                </h1>
                
                <% if (poll.description) { %>
                <p class="card-text text-muted mb-4"><%= poll.description %></p>
                <% } %>
                
                <div class="mb-4">
                    <small class="text-muted">
                        <i class="fas fa-user me-1"></i>
                        Created by <strong><%= poll.creator_name %></strong>
                        <span class="mx-2">â€¢</span>
                        <i class="fas fa-calendar me-1"></i>
                        <%= new Date(poll.created_at).toLocaleDateString() %>
                    </small>
                </div>

                <% if (user && !userVote) { %>
                    <h4 class="mb-3">
                        <i class="fas fa-vote-yea me-2 text-success"></i>
                        Cast Your Vote
                    </h4>
                    <form method="POST" action="/polls/<%= poll.id %>/vote">
                        <% options.forEach(option => { %>
                        <div class="vote-option">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="option_id" id="option<%= option.id %>" value="<%= option.id %>" required>
                                <label class="form-check-label w-100" for="option<%= option.id %>">
                                    <strong><%= option.option_text %></strong>
                                </label>
                            </div>
                        </div>
                        <% }) %>
                        
                        <button type="submit" class="btn btn-success btn-lg mt-3">
                            <i class="fas fa-vote-yea me-2"></i>Submit Vote
                        </button>
                    </form>
                <% } else if (user && userVote) { %>
                    <div class="alert alert-info">
                        <i class="fas fa-check-circle me-2"></i>
                        You have already voted in this poll. Thank you for participating!
                    </div>
                <% } else { %>
                    <div class="alert alert-warning">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Please <a href="/login" class="alert-link">login</a> to vote in this poll.
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-bar me-2"></i>
                    Results
                </h5>
            </div>
            <div class="card-body">
                <% 
                const totalVotes = options.reduce((sum, option) => sum + option.vote_count, 0);
                %>
                
                <div class="mb-3">
                    <strong>Total Votes: <%= totalVotes %></strong>
                </div>
                
                <% if (totalVotes > 0) { %>
                    <% options.forEach(option => { %>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span class="<%= userVote === option.id ? 'fw-bold text-success' : '' %>">
                                <%= option.option_text %>
                                <% if (userVote === option.id) { %>
                                    <i class="fas fa-check-circle text-success ms-1"></i>
                                <% } %>
                            </span>
                            <span class="text-muted">
                                <%= option.vote_count %> (<%= Math.round((option.vote_count / totalVotes) * 100) %>%)
                            </span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar <%= userVote === option.id ? 'bg-success' : '' %>" 
                                 style="width: <%= (option.vote_count / totalVotes) * 100 %>%">
                            </div>
                        </div>
                    </div>
                    <% }) %>
                    
                    <canvas id="resultsChart" width="400" height="300" class="mt-3"></canvas>
                <% } else { %>
                    <p class="text-muted text-center">
                        <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                        No votes yet. Be the first to vote!
                    </p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a href="/polls" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left me-2"></i>Back to All Polls
    </a>
</div>

<% if (totalVotes > 0) { %>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const ctx = document.getElementById('resultsChart').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: [<% options.forEach((option, index) => { %>'<%= option.option_text %>'<%= index < options.length - 1 ? ',' : '' %><% }) %>],
            datasets: [{
                data: [<% options.forEach((option, index) => { %><%= option.vote_count %><%= index < options.length - 1 ? ',' : '' %><% }) %>],
                backgroundColor: [
                    '#007bff', '#28a745', '#dc3545', '#ffc107', 
                    '#17a2b8', '#6f42c1', '#fd7e14', '#20c997'
                ],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
});
</script>
<% } %>